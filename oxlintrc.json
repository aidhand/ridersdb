{
  "$schema": "https://oxc-project.github.io/oxlint/schemas/oxlintrc.json",
  "rules": {
    "all": true
  },
  "allow": ["no-console", "no-debugger"],
  "deny": ["no-unused-vars", "no-undef", "prefer-const"],
  "warn": ["no-var"],
  "ignore_patterns": [
    "node_modules/",
    "dist/",
    ".output/",
    ".nuxt/",
    "migrations/",
    "**/*.d.ts"
  ],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "globals": {
    "defineNuxtConfig": "readonly",
    "defineAppConfig": "readonly",
    "definePageMeta": "readonly",
    "useHead": "readonly",
    "useAppConfig": "readonly",
    "useState": "readonly",
    "useRoute": "readonly",
    "useRouter": "readonly",
    "navigateTo": "readonly",
    "$fetch": "readonly"
  }
}
