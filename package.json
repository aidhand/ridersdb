{
  "$schema": "https://json.schemastore.org/package",
  "name": "ridersdb",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db": "bun --cwd packages/tools run ridersdb",
    "db:migrate": "bun --cwd packages/tools run ridersdb-migrate",
    "db:seed": "bun --cwd packages/tools run ridersdb-seed",
    "db:backup": "bun --cwd packages/tools run ridersdb-backup"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.2.13"
}
