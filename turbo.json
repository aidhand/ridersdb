{
  "$schema": "https://turborepo.com/schema.json",
  
  "ui": "tui",

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "src/**", "tsconfig.json"],
      "outputs": [".nuxt/**", "!.nuxt/cache/**", "dist/**", ".tsbuildinfo"]
    },

    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "env": ["NUXT_DATABASE_URL"]
    },

    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NUXT_DATABASE_URL"]
    },

    "clean": {
      "dependsOn": ["^clean"]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },

    "format": {
      "dependsOn": ["^format"]
    },

    "typecheck": {
      "dependsOn": ["^typecheck"]
    },

    "test": {
      "dependsOn": ["^test"]
    }
  }
}
