{
  "$schema": "https://json.schemastore.org/package",
  "name": "@repo/config",
  "description": "Unified configuration package for monorepo",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./eslint/base": {
      "import": "./dist/eslint/base.js",
      "types": "./dist/eslint/base.d.ts"
    },
    "./eslint/typescript": {
      "import": "./dist/eslint/typescript.js",
      "types": "./dist/eslint/typescript.d.ts"
    },
    "./eslint/node": {
      "import": "./dist/eslint/node.js",
      "types": "./dist/eslint/node.d.ts"
    },
    "./eslint/vue": {
      "import": "./dist/eslint/vue.js",
      "types": "./dist/eslint/vue.d.ts"
    },
    "./typescript/base": "./src/typescript/base.json",
    "./typescript/node": "./src/typescript/node.json",
    "./typescript/app": "./src/typescript/app.json",
    "./typescript/library": "./src/typescript/library.json",
    "./prettier/base": {
      "import": "./dist/prettier/base.js",
      "types": "./dist/prettier/base.d.ts"
    },
    "./oxlint/base": {
      "import": "./dist/oxlint/base.js",
      "types": "./dist/oxlint/base.d.ts"
    },
    "./vitest/base": {
      "import": "./dist/vitest/base.js",
      "types": "./dist/vitest/base.d.ts"
    },
    "./vitest/ui": {
      "import": "./dist/vitest/ui.js",
      "types": "./dist/vitest/ui.d.ts"
    }
  },
  "files": [
    "./dist/**/*",
    "./src/typescript/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "oxlint": "^0.10.0"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@typescript-eslint/utils": "^8.19.1",
    "eslint-plugin-vue": "^9.32.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "typescript-eslint": "^8.19.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^26.0.0",
    "vitest": "^2.1.8"
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "prettier": "^3.5.3",
    "oxlint": "^0.10.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
