{
  "extends": "./src/typescript/library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,

    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "*.config.ts", "*.config.js"]
}
