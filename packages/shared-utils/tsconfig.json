{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/config/typescript/library",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,

    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "*.config.ts", "*.config.js"],
  "references": [{ "path": "../shared-types" }]
}
