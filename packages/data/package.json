{
  "$schema": "https://json.schemastore.org/package",
  "name": "@repo/data",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "seed": "bun run src/cli.ts seed",
    "seed:minimal": "bun run src/cli.ts seed --minimal",
    "seed:full": "bun run src/cli.ts seed --full",
    "factory": "bun run src/cli.ts factory"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@repo/shared-utils": "workspace:*",
    "@repo/shared-types": "workspace:*",
    "commander": "^12.1.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/node": "^24.0.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
