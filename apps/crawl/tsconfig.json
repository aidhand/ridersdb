{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/config/typescript/app",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "migrations", "storage"],
  "references": [
    { "path": "../../packages/config" },
    { "path": "../../packages/shared-types" },
    { "path": "../../packages/shared-utils" },
    { "path": "../../packages/data" }
  ]
}
